<%= render 'layouts/header' %>

<h1>Admins</h1>

<table border=1>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Deleteable</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
      	<td><%=admin.name%></td>
      	<td><%=admin.email%></td>
      	<td><%=admin.deleteable%></td>
        <td><%= link_to 'Edit', edit_admin_path(admin) %></td>
        <% if(admin.id!=Admin.find(@current_user.id).id) %>
        <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <td>Suicide is illegal! :P</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin', new_admin_path %>
