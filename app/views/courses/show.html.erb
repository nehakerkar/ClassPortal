<%= render 'layouts/header' %>

<p>
  <strong>Title:</strong>
  <%= @course.title %>
</p>

<p>
  <strong>Coursenumber:</strong>
  <%= @course.coursenumber %>
</p>

<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

<%= if @current_user.type != "Student"
      link_to 'Edit Course', edit_course_path(@course)

    end %>

<p>
  <strong>Instructor Name:</strong>
  <%= if params[:course_instr_id]
       @courseinstrresult = CourseInstructor.find(params[:course_instr_id])
       @courseinstrresult.user.name
     end
  %>
</p>

<p>
  <strong>Materials:</strong>
  <% if params[:course_instr_id]
       @courseinstrresult = CourseInstructor.find(params[:course_instr_id]).materials
	   @courseinstrresult.each do |eachcourse|%>
	    <%=  eachcourse.material %><br><%
	   end
     end
  %>
</p>

<%= if @current_user.type == "Student"
      link_to 'Enroll in course', course_enroll_request_path(course_number: @course.coursenumber, student_id: @current_user.id, course_instr_id: params[:course_instr_id])
    end %>

<%= link_to 'Back', :back %>
